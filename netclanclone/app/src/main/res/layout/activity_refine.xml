<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".refine">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/toolbar_color" >

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refine"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="35dp"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Your Availability"
            android:textColor="@color/toolbar_color"
            android:textSize="15dp"
            android:textStyle="bold"
            />

        <Spinner
            android:layout_width="300dp"
            android:id="@+id/spinner1"
            android:layout_height="40dp"
            android:background="@drawable/spinner_background"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Your Status"
            android:textColor="@color/toolbar_color"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="250">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:maxLength="250"
                android:gravity="top"
                android:text="Hi community ! I am open to new connections"
                android:minLines="2"
                android:scrollbars="vertical"
                android:textSize="15sp"/>

        </com.google.android.material.textfield.TextInputLayout>
        <!--        <EditText-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="80dp"-->
        <!--            android:layout_marginTop="10dp"-->
        <!--            android:inputType="textMultiLine"-->
        <!--            android:lines="8"-->
        <!--            android:maxLines="10"-->
        <!--            android:gravity="top|start"-->
        <!--            android:scrollbars="vertical"-->
        <!--            android:background="@drawable/border"-->
        <!--            />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Hyper Local Distance"
            android:textColor="@color/toolbar_color"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:value="50"
            android:valueFrom="1"
            android:valueTo="100"
            android:stepSize="1"
            app:trackColorInactive="@color/grey"
            app:labelStyle="@style/MyTooltip"
            app:tickColor="#00000000"
            app:trackColorActive="@color/toolbar_color"
            app:thumbColor="@color/toolbar_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:labelBehavior="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1 Km" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                android:text="100 Km" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Purpose"
            android:textColor="@color/toolbar_color"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Coffee"
                android:textSize="12sp"
                android:tag="#FFFFFF"
                android:textColor="#30406A"
                android:backgroundTint="#FFFFFF"
                app:strokeColor="#30406A"
                app:strokeWidth="2sp"
                ></Button>
            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business"
                android:textSize="12sp"
                android:textColor="#30406A"
                android:tag="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                app:strokeColor="#30406A"
                app:strokeWidth="2sp"
                android:layout_marginStart="5dp">
            </Button>
            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hobbies"
                android:textSize="12sp"
                android:tag="#FFFFFF"
                android:textColor="#30406A"
                android:backgroundTint="#FFFFFF"
                app:strokeColor="#30406A"
                app:strokeWidth="2sp"
                android:layout_marginStart="5dp">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friendship"
                android:tag="#FFFFFF"
                android:textColor="#30406A"
                android:backgroundTint="#FFFFFF"
                app:strokeColor="#30406A"
                app:strokeWidth="2sp"
                android:textSize="12sp"
                android:layout_marginStart="5dp">
            </Button>
            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Movies"
                android:tag="#FFFFFF"
                android:textSize="12sp"
                android:textColor="#30406A"
                android:backgroundTint="#FFFFFF"
                app:strokeColor="#30406A"
                app:strokeWidth="2sp"
                android:layout_marginStart="5dp">
            </Button>
            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dining"
                android:tag="#FFFFFF"
                android:textSize="12sp"
                android:textColor="#30406A"
                android:backgroundTint="#FFFFFF"
                app:strokeColor="#30406A"
                app:strokeWidth="2sp"
                android:layout_marginStart="5dp">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dating"
                android:tag="#FFFFFF"
                android:textSize="12sp"
                android:textColor="#30406A"
                android:backgroundTint="#FFFFFF"
                app:strokeColor="#30406A"
                app:strokeWidth="2sp"
                android:layout_marginStart="5dp">
            </Button>
            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matrimony"
                android:textColor="#30406A"
                android:tag="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                app:strokeColor="#30406A"
                app:strokeWidth="2sp"
                android:textSize="12sp"
                android:layout_marginStart="5dp">
            </Button>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Save &amp; Explore"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/toolbar_color"/>

    </LinearLayout>


</LinearLayout>